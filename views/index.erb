<h1>ALL THE PIZZAS!</h1>

<% @orders.each do |order| %>
  <p>Name: <%= order.pretty_name %></p>
  <p>Order: <%= order.quantity %> x <%= order.topping %></p>
  <p><a href="pizza_orders/<%= order.id %>">Show order!</a></p>
  <hr />
  <!-- hr / #thats a black line -->
<% end %>

<form method="post" action="/pizza_orders/delete_all">
    <input type="submit" value="Delete everything">
</form>
